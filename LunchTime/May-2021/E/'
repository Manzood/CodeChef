#include "bits/stdc++.h"
using namespace std;
#define debug(x) cout << #x << " = " << x << endl;
#define int long long

// find the deepest node from the current node and then swap it, adding distance to answer
int ans = 0;
pair <int, int> dfs (int node, vector <vector <int>>& adj, string& s) {
    pair <int, int> retval = {-1, -1};
    for (auto x: adj[node]) {
    }
    // return the index of the token at the largest distance from here
    return retval;
}

int32_t main() {
    int t;
    cin >> t;
    while (t--) {
        ans = 0;
        int n;
        scanf("%lld", &n);
        string s;
        cin >> s;
        vector <vector <int>> adj(n);
        vector <int> parent(n, -1);
        for (int i = 0; i < n - 1; i++) {
            int p;
            scanf("%lld", &p);
            p--;
            parent[i + 1] = p;
            adj[p].push_back (i + 1);
        }
        printf("%lld\n", ans);
    }
}
